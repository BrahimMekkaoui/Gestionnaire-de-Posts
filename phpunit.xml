<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true">

    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
    </testsuites>

    <!-- Coverage configuration can be provided via CLI options when needed -->

    <source>
        <include>
            <directory>./app</directory>
            <directory>./config</directory>
            <directory>./database/factories</directory>
            <directory>./database/seeders</directory>
            <directory>./routes</directory>
        </include>
    </source>

    

    <php>
        <!-- Environment -->
        <env name="APP_NAME" value="Gestionnaire de Posts"/>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_DEBUG" value="true"/>
        <env name="APP_KEY" value="base64:r0w0xC+mYYqjbZhHZ3uk0oGkMpmCwR4tQb7p+J5E8rI="/>
        <env name="APP_URL" value="http://localhost"/>

        <!-- Database -->
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>

        <!-- Cache -->
        <env name="CACHE_DRIVER" value="array"/>
        <env name="CACHE_PREFIX" value="laravel_test"/>

        <!-- Mail -->
        <env name="MAIL_MAILER" value="array"/>
        <env name="MAIL_FROM_ADDRESS" value="test@example.com"/>
        <env name="MAIL_FROM_NAME" value="Gestionnaire de Posts"/>

        <!-- Filesystem -->
        <env name="FILESYSTEM_DISK" value="local"/>

        <!-- Services -->
        <env name="AWS_ACCESS_KEY_ID" value=""/>
        <env name="AWS_SECRET_ACCESS_KEY" value=""/>
        <env name="AWS_DEFAULT_REGION" value="us-east-1"/>
        <env name="AWS_BUCKET" value=""/>
        <env name="AWS_USE_PATH_STYLE_ENDPOINT" value="false"/>

        <!-- Broadcasting -->
        <env name="BROADCAST_DRIVER" value="log"/>
        <env name="LOG_CHANNEL" value="stack"/>

        <!-- Debug -->
        <env name="DEBUGBAR_ENABLED" value="false"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="SCOUT_DRIVER" value="null"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="NIGHTWATCH_ENABLED" value="false"/>

        <!-- Security -->
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="HASH_DRIVER" value="bcrypt"/>
        <env name="SANCTUM_STATEFUL_DOMAINS" value="localhost,localhost:3000,127.0.0.1,127.0.0.1:8000,::1"/>
        <env name="SESSION_DOMAIN" value=""/>
        <env name="SESSION_SECURE_COOKIE" value="false"/>
        <env name="SESSION_LIFETIME" value="120"/>
    </php>

    
</phpunit>
